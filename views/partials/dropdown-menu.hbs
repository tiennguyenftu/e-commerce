<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
        <i class="fa fa-th-list" aria-hidden="true"></i> Catalogue <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
        {{#each categories}}
            {{#unless this.ancestors}}
                <li><a href="/categories/{{this.slug}}">{{this.name}}</a></li>
            {{/unless}}
        {{/each}}
    </ul>
</li>
