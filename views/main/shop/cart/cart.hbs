{{#if cart.items}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h1>Shopping Cart</h1>
            <ul class="list-group">
                {{#each cart.items}}
                    <div class="list-group-item">
                        <span class="badge">{{this.quantity}}</span>
                        <img src="{{this.thumbnail}}" alt="{{this.name}}" style="width: 48px; height: auto">
                        <strong>{{this.name}}</strong>
                        <span class="label label-success">${{this.sale}}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                Action <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="/add/{{this._id}}">Add 1</a></li>
                                <li><a href="/reduce/{{this._id}}">Reduce by 1</a></li>
                                <li><a href="/remove/{{this._id}}">Remove All</a></li>
                            </ul>
                        </div>
                        <p id="detail" class="help-block"><strong>Size: {{this.sizes}}</strong>, <strong>Color: {{this.colors}}</strong></p>
                    </div>

                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <p><strong>Total Items: {{cart.totalQuantity}}</strong></p>
            <p><strong>Total Price: <span class="label label-success">${{cart.totalPrice}}</span></strong></p>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" class="btn btn-success btn-round" >Check Out</a>
            <a href="/products" class="btn btn-info btn-round" type="button" style="float: right">Continue Shopping</a>
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No items in cart</h2>
        </div>
    </div>
{{/if}}


